{
  "name": "revaya-host",
  "version": "1.0.0",
  "description": "Event management software for producers and hospitality teams",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "start": "python3 -m http.server 8000",
    "build": "echo 'Static site - no build step required'",
    "deploy": "vercel --prod",
    "supabase:login": "npx supabase login",
    "supabase:link": "npx supabase link --project-ref YOUR_PROJECT_REF",
    "supabase:db-push": "npx supabase db push",
    "supabase:storage-create": "npx supabase storage create event-documents --public=false --file-size-limit=10485760",
    "supabase:functions-deploy": "npx supabase functions deploy analyze-document-for-tasks",
    "supabase:secrets-set": "npx supabase secrets set OPENAI_API_KEY=your_openai_api_key_here",
    "ai-feature:setup": "./setup-ai-feature.sh"
  },
  "keywords": [
    "event-planning",
    "hospitality",
    "event-management",
    "supabase",
    "react"
  ],
  "author": "Revaya Hospitality Group",
  "license": "MIT",
  "dependencies": {
    "supabase": "^2.51.0"
  },
  "devDependencies": {
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}